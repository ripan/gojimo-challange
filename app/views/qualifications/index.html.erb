<p id="notice"><%= notice %></p>

<h1>Listing Qualifications</h1>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Subjects</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @qualifications.each do |qualification| %>
    <tr>
      <td><%= qualification.name %></td>
      <td><%= qualification.country %></td>
      <td>
        <ul class="list-unstyled">
          <% qualification.subjects.each do |subject| %>
          <li style="background-color: <%=subject.colour%>"><%=subject.title%></li>
          <% end%>
        </ul>
      </td>
      <td><%= link_to 'Show', qualification,  :class => "btn btn-primary btn-xs pull-right"%></td>
    </tr>
    <% end %>
  </tbody>
</table>
